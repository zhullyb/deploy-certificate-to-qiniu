# EditorConfig is awesome: https://EditorConfig.org

# 顶级配置文件
root = true

# 所有文件的默认设置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript/JavaScript 文件
[*.{ts,js,tsx,jsx}]
indent_style = tab
indent_size = 2
max_line_length = 120

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
max_line_length = off
